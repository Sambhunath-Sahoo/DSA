{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run python",
            "type": "shell",
            "command": "python3",
            "args": [
                "${file}",
                "<",
                "setup/input.txt",
                ">",
                "setup/output.txt"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run python with input",
            "type": "shell",
            "command": "python3 ${file} < setup/input.txt > setup/output.txt",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
